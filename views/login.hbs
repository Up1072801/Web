<style>
body {
  background-image: url('./img/imagebg.jpg');
  background-repeat: no-repeat;
}
</style>
  <!-- Popup window -->
  <div class="modal fade" id="popup" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Warning. Admins Only!</h5>
        </div>
        <div class="modal-body">
          <p>Please select an option:</p>
          <a type="button" class="btn btn-primary" data-dismiss="modal" href="home">Continue as Guest</a>
          <button type="button" class="btn btn-secondary" id="login-btn" data-bs-dismiss="modal">Login as Admin</button>
        </div>
      </div>
    </div>
  </div>
  <!-- login form -->
    <br>
    <div class="login-form container" id="login-form">
      <form id="login-form" class="needs-validation" novalidate action="/login" method="POST">
    <div class="form-floating mb-3">
      
      <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
      <label for="username">Username:</label>
    </div>
    <div class="form-floating mb-3">
      
      <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
      <label for="password">Password:</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    {{#if errorMessage}}
    <div class="alert alert-danger mt-3  " id="errorMessage" role="alert">
      {{ errorMessage }}
    </div>
    {{/if}}

  </form>
  </div>
    <!-- FORM ENDS HERE-->

  <script>
    const loginBtn = document.getElementById('login-btn');
    const loginForm = document.getElementById('login-form');

    loginBtn.addEventListener('click', () => {
      loginForm.style.display = 'block';
    });

  </script>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#popup').modal('show');
    });
  </script>
  

  